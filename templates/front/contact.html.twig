{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.3/css/bootstrapValidator.min.css">
{% endblock %}
{% block title %}La Folle Agence | Me contacter{% endblock %}
{% block body %}
    <header>
        <section class="container-fluid" id="contact-header">
            <div class="row">
                <div class="col-xs-12 col-md-8 col-md-offset-2 page-header-style">
                    <h1>Et si <span>on discutait</span> autour d'un café ?</h1>
                </div>
            </div>
        </section>
    </header>

    <section class="bandeau container-fluid"></section>

    <section class="container-fluid white" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-offset-5 col-md-2">
                    <h2>Me Contacter:</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-offset-4 col-md-4">
                    <p>
                        Damien BEAUSEIGNEUR
                    </p>
                    <p><a href="tel:+33XXXXXXXX">XXXXXXXX</a></p>
                    <p>
                        Skype: dbeauseigneur@yahoo.fr
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="container-fluid white">
        <div class="container">
            <form class="form-horizontal" action="{{ path('contact') }}" method="POST" id="contact_form">
                <fieldset>

                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-offset-1 col-md-5 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="first_name" placeholder="Prénom *" class="form-control" type="text"
                                           required>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-md-5 col-md-offset-0 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="last_name" placeholder="Nom *" class="form-control" type="text"
                                           required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-offset-1 col-md-5 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                    <input name="email" placeholder="E-mail *" class="form-control" type="email"
                                           required>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-md-5 col-md-offset-0 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                    <input name="tel" placeholder="Téléphone" class="form-control" type="tel"
                                           pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-offset-1 col-md-10 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                    <textarea class="form-control" name="message" placeholder="Message *" rows="10"
                                              minlength="5" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 col-md-offset-1 col-md-10 inputGroupContainer">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="g-recaptcha" data-sitekey="{{ key }}" data-callback="enableBtn"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <input class="purple-button" name="submit" type="submit" value="Envoyer le message"
                                   id="contact_forms">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script type="text/javascript" src="{{ asset('js/contact.js') }}"></script>
{% endblock %}
